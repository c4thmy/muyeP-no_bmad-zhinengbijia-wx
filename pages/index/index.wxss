/* 页面头部 */
.page-header {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  margin-bottom: 20rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单样式 */
.textarea {
  min-height: 120rpx;
  line-height: 1.5;
}

/* 商品列表 */
.product-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  background: #f5f5f5;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-platform {
  font-size: 24rpx;
  color: #4CAF50;
  margin-bottom: 4rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}

.product-actions {
  margin-left: 20rpx;
}

.btn-remove {
  background: #ff4444;
  color: white;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 16rpx 24rpx;
  min-width: auto;
  line-height: 1;
}

/* 平台列表 */
.platform-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.platform-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  flex: 1;
  min-width: 200rpx;
}

.platform-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.platform-name {
  font-size: 28rpx;
  color: #666;
}

/* 比较按钮 */
.compare-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn-large {
  width: 100%;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
}

/* 使用说明 */
.help-section {
  margin-top: 40rpx;
  padding: 32rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.help-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.help-item {
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 0;
  padding-left: 24rpx;
  position: relative;
}

.help-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #4CAF50;
}

/* 加载状态 */
.btn-primary[disabled] {
  background: #ccc;
  color: #666;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .platform-item {
    min-width: 100%;
  }
}