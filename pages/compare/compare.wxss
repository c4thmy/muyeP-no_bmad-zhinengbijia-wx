/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 48rpx;
}

/* 比较头部 */
.compare-header {
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
  margin-bottom: 20rpx;
}

.compare-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.compare-count {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

.compare-actions {
  display: flex;
  gap: 16rpx;
}

.compare-actions .btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  flex: 1;
  text-align: center;
}

/* 价格对比 */
.price-sort {
  display: flex;
  gap: 16rpx;
}

.sort-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  min-width: auto;
}

.sort-btn.active {
  background: #4CAF50;
  color: white;
}

.price-list {
  white-space: nowrap;
  padding: 20rpx 0;
}

.price-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  position: relative;
  vertical-align: top;
}

.price-item.lowest-price {
  background: linear-gradient(135deg, #fff3e0, #ffe0b2);
  border: 2rpx solid #ff9800;
}

.price-product-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.price-info {
  white-space: normal;
}

.price-product-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price-platform {
  display: block;
  font-size: 22rpx;
  color: #4CAF50;
  margin-bottom: 8rpx;
}

.price-value {
  display: block;
  font-size: 32rpx;
  color: #ff4444;
  font-weight: bold;
}

.lowest-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #ff9800;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 参数对比 */
.param-filter {
  display: flex;
  align-items: center;
}

.filter-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  min-width: auto;
}

.param-table {
  overflow-x: auto;
  padding: 20rpx 0;
}

.param-header {
  display: flex;
  background: #f8f8f8;
  border-radius: 8rpx 8rpx 0 0;
  min-width: 100%;
}

.param-row-header {
  min-width: 160rpx;
  padding: 24rpx;
  font-weight: 600;
  color: #333;
  background: #e8e8e8;
  border-right: 1rpx solid #ddd;
}

.param-col-header {
  min-width: 200rpx;
  padding: 24rpx;
  font-weight: 600;
  color: #333;
  border-right: 1rpx solid #ddd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.param-row {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.param-name {
  min-width: 160rpx;
  padding: 24rpx;
  background: #fafafa;
  border-right: 1rpx solid #f0f0f0;
  font-weight: 500;
  color: #666;
}

.param-value {
  min-width: 200rpx;
  padding: 24rpx;
  border-right: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  color: #333;
}

.param-value.highlight {
  background: #e8f5e8;
  color: #2e7d2e;
  font-weight: 600;
}

.param-value.warning {
  background: #fff3cd;
  color: #856404;
}

/* 商品详情列表 */
.product-detail-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-detail-item:last-child {
  border-bottom: none;
}

.product-detail-info {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.product-detail-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-detail-content {
  flex: 1;
}

.product-detail-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.product-detail-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.product-detail-platform {
  font-size: 24rpx;
  color: #4CAF50;
  padding: 4rpx 12rpx;
  background: #e8f5e8;
  border-radius: 4rpx;
}

.product-detail-price {
  font-size: 30rpx;
  color: #ff4444;
  font-weight: bold;
}

.product-detail-params {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.param-tag {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.product-detail-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-left: 16rpx;
}

.btn-link {
  background: none;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
  border-radius: 4rpx;
  font-size: 22rpx;
  padding: 12rpx 16rpx;
  min-width: auto;
  line-height: 1;
}

/* 比较总结 */
.summary-section {
  margin-bottom: 32rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.recommendation {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #4CAF50;
}

.recommendation-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.recommendation-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .price-item {
    width: 240rpx;
  }
  
  .param-col-header,
  .param-value {
    min-width: 160rpx;
  }
}